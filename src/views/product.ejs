                            <div class="products grid">
                                <% products.forEach(product=>{ %>

                                    <div class="card-wrap">
                                        <% if( product.offer> 0){ %>
                                            <span class="offer">
                                                <%= product.offer %>% off
                                            </span>
                                            <% } %>
                                                <a href="product/<%= product._id %>">
                                                    <div class="img">
                                                        <img src="/uploads/product/<%= product.category %>/<%= product.productPictures[0].img %>"
