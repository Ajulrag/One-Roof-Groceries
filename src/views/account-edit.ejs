<body>
    <%- include('./includes/homeNavbar.ejs') %>
        <!-- all content shuld be inside div  -->
        <div id="home-body">

            <section class="account-sec">
                <form action="edit" method="post" enctype="multipart/form-data">
                    <div class="account-wrap">
                        <div class="left flex flex-column align-items-center">
                            <h2>Hi, <%= user.name %>
                            </h2>
                            <div class="card account-image">
                                <img src="/uploads/profiles/<% if(user.profilePicture){ %><%= user.profilePicture %><% }else{ %>avatar.jpg<% } %>"
                                    alt="" id="preview">
                            </div>
                            <div class="btn-wra">
                                <label for="profilePicture" class=" btn confirm">Upload</label>
                                <input type="file" accept="image/*" name="profilePicture" id="profilePicture"
                                    class="upload-file" style="display: none;">
                            </div>
                        </div>
                        <div class="right">
                            <div class="card my-3">
                                <div class="account-feild flex p-3">
                                    <label class="account-field-title" for="name">Name</label>
                                    <input class="px-2 py-1 rounded border-1" type="text" name="name" id="name" value="<%= user.name %>" style="text-transform: capitalize;">
                                </div>
                                <div class="account-feild flex p-3">
                                    <label class="account-field-title" for="phone">Phone no</label>
                                    <input class="px-2 py-1 rounded border-1" type="number" name="phone" id="phone" value="<%= user.phone %>">
                                </div>
                                <div class="account-feild flex p-3">
                                    <label class="account-field-title" for="email">Email</label>
                                    <input class="px-2 py-1 rounded border-1" type="email" name="email" id="email" value="<%= user.email %>">
                                </div>

                                <div class="account-feild flex p-3">
                                    <label class="account-field-title" for="email">Address</label>
                                    <div>
                                        <br>
                                        <div class="account-feild flex p-3">
                                            <label class="account-field-title" for="district">District</label>
                                            <input class="px-2 py-1 rounded border-1" type="text" name="district" id="district"
                                                value="<%= user.address[0].district %>">
                                        </div>
                                        <div class="account-feild flex p-3">
                                            <label class="account-field-title" for="pincode">pincode</label>
                                            <input class="px-2 py-1 rounded border-1" type="text" name="pincode" id="pincode"
                                                value="<%= user.address[0].pincode %>">
                                        </div>
                                        <div class="account-feild flex p-3">
                                            <label class="account-field-title" for="city">city</label>
                                            <input class="px-2 py-1 rounded border-1" type="text" name="city" id="city" value="<%= user.address[0].city %>">
                                        </div>
                                        <div class="account-feild flex p-3">
                                            <label class="account-field-title" for="place">place</label>
                                            <input class="px-2 py-1 rounded border-1" type="text" name="place" id="place" value="<%= user.address[0].city %>">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="btn-wrap">
                                <a href="/account" class="btn cancel">Cancel</a>
                                <input type="submit" value="confirm" class="btn confirm">
                            </div>
                        </div>
                </form>
            </section>
        </div>


        </div>
