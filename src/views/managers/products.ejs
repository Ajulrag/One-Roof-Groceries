            <div class="">
                <div class="page-title">
                    <h1 style="text-transform: capitalize">
                        Products
                    </h1>
                    
                </div>
                <div class="direction">
                    <ul class="flex">
                        <li>Home</li>
                        <li style="text-transform: capitalize">
                            products
                        </li>
                    </ul>
                </div>
            </div>
            <div class="condtents productList" style="margin-top: 1rem;">

                <div class="content-section card" id="productList">

                    <div class="userBox">

                        <table id="table_id">
                            <p class="green text-center server-response">
                                <%= success %>
                            </p>
                            <thead>
                                <tr style="font-weight: 800; background-color: var(--blue); color: var(--white);">
                                    <th>Image</th>
                                    <th class="table-hide">Name</th>
                                    <th class="table-hide">Price</th>
                                    <th>Stock</th>
                                    <th class="table-hide">Category</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% products.forEach(product=>{ %>
                                    <tr>
                                        <td><img src="/uploads/product/<%= product.category._id %>/<%= product.productPictures[0].img %>"
                                                alt="" width="50px"></td>
                                        <td class="table-hide">
                                            <%= product.name %>
                                        </td>
                                        <td class="table-hide">
                                            <%= product.price %>
                                        </td>
                                        <td>
                                            <% if(product.stock> 10){%>
                                                <%= product.stock %>
                                                    <%}else{%>
                                                        <div
                                                            class="<% if(product.stock <= 5){%>danger <%}else{%> warning<%}%>">
                                                            <%= product.stock %>
                                                        </div>
                                                        <%}%>
                                        </td>
                                        <td class="table-hide">
                                            <%= product.category.name %>
                                        </td>
                                        <td><a href="/manager/product/<%= product._id %>"> select</a></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            </div>


        </main>

        <script src="https://kit.fontawesome.com/6819033383.js" crossorigin="anonymous"></script>
        <script src="/js/main.js"></script>
