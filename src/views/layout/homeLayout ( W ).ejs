    <script>
        let header = document.getElementById('navbar')
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.style.background = 'linear-gradient(to right, #e7e3da, #fff)'
            }
            else { header.style.background = 'transparent' }
        })
    </script>
